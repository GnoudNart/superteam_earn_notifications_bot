
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Biến môi trường chứa connection string của PostgreSQL
}

model User {
  id              String    @id @default(cuid()) // ID nội bộ của database
  chatId          BigInt    @unique // Telegram Chat ID, dùng BigInt vì có thể lớn
  isEnableNoti    Boolean   @default(true) // Cờ bật/tắt thông báo
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}