
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  name            String
  email           String   @unique
  telegramId      BigInt   @unique
  chatId          BigInt    @unique
  isEnableNoti    Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Session {
  id            Int      @id @default(autoincrement())
  activeMessageId Int
  minValue      Int
  maxValue      Int
  isBounties    Boolean   @default(true)
  isProjects    Boolean   @default(true)
  skills        String[]
  location      String
  hasSet        Boolean   @default(false)
  isEnableNoti  Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}